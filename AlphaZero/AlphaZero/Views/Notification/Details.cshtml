@model AlphaZero.Models.reminds

@{
    ViewBag.Title = "Details Notification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="row">

        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Reminders - View</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Notification")">Notification List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        View Reminder -
                        @if (Model.landlord == null && Model.tenant == null)
                        {
                            <span>Customized</span>
                        }
                        else
                        {
                            <span>@Html.DisplayFor(model => model.CombinedNames)</span>
                        }
                    </li>
                </ol>
            </nav>
        </div>

        <div class="col-md-6 col-sm-12 text-right">
            <div class="dropdown">
                <a class="btn btn-primary" href="@Url.Action("Create", "Notification")" role="button">
                    Create Customized Reminder
                </a>
            </div>
        </div>
    </div>
</div>



<!-- basic table  Start -->
<div class="pd-20 card-box mb-30">

    @if (Model.landlord == null && Model.tenant == null)
    {
        <div class="clearfix mb-20">
            <div class="pull-left">
                <h4 class="text-blue h4">Customized Reminder</h4>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Variable</th>
                    <th scope="col">Content</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">Reminder Title</th>
                    <td>@Html.DisplayFor(model => model.reminder_title)</td>
                </tr>
                <tr>
                    <th scope="row">Reminder Description</th>
                    <td>@Html.DisplayFor(model => model.reminder_desc)</td>
                </tr>
                <tr>
                    <th scope="row">Reminder Date</th>
                    <td>@Html.DisplayFor(model => model.FormattedDate)</td>
                </tr>
            </tbody>
        </table>

        <div class="card card-box text-center">
            <div class="card-body">
                <h5 class="card-title">Actions :</h5>
                <p class="card-text">Choose Carefully :P</p>
                @Html.ActionLink("Edit this Reminder", "Edit", "Notification", new { id = Model.reminder_id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Back to List", "Index", new { id = Model.reminder_id }, new { @class = "btn btn-primary" })
            </div>
        </div>
    }

    else
    {
        <div class="clearfix mb-20">
            <div class="pull-left">


                @if (Model.landlord != null)
                {
                    <h4 class="text-blue h4">System Reminder - Landlord Reminder</h4>
                }
                else if (Model.tenant != null)
                {
                    <h4 class="text-blue h4">System Reminder - Tenant Reminder</h4>
                }

            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Variable</th>
                    <th scope="col">Content</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">Reminder Title</th>
                    <td>@Html.DisplayFor(model => model.reminder_title)</td>
                </tr>
                <tr>
                    <th scope="row">Reminder Description</th>
                    <td>@Html.DisplayFor(model => model.reminder_desc)</td>
                </tr>
                <tr>
                    <th scope="row">Reminder Date</th>
                    <td>@Html.DisplayFor(model => model.FormattedDate)</td>
                </tr>

                <tr>
                    @if (Model.landlord != null)
                    {
                        <th scope="row">Name of Landlord</th>
                    }
                    else if (Model.tenant != null)
                    {
                        <th scope="row">Name of Tenant</th>
                    }
                    <td>
                        @if (Model.landlord != null)
                        {
                            <span>@Model.landlord.landlord_name</span>
                        }
                        else if (Model.tenant != null)
                        {
                            <span>@Model.tenant.tenant_name</span>
                        }

                    </td>
                </tr>
            </tbody>
        </table>

        <div class="card card-box text-center">
            <div class="card-body">
                <h5 class="card-title">Actions :</h5>
                <p class="card-text">Choose Carefully :P</p>
                @Html.ActionLink("Edit this Reminder", "Edit", "Notification", new { id = Model.reminder_id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Back to List", "Index", new { id = Model.reminder_id }, new { @class = "btn btn-primary" })
            </div>
        </div>

    }
</div>
<!-- basic table  End -->
