@model AlphaZero.Models.floor

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Floor", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()


<div class="form-horizontal">
    <h4>floor</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.floor_id)

    <div class="form-group row">
        @Html.LabelFor(model => model.floor_id, htmlAttributes: new { @class = "col-sm-12 col-md-2 col-form-label" })
        <div class="col-sm-12 col-md-10">
            @Html.DisplayFor(model => model.floor_id, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.floor_modemIP, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.floor_modemIP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.floor_modemIP, "", new { @class = "text-danger" })
        </div>
    </div>

   

    <div class="form-group row">
        @Html.LabelFor(model => model.floor_cctvQr, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (!string.IsNullOrEmpty(Model.floor_cctvQr))
            {
                <img src="@Url.Action("GetFile", "Floor", new { floorLayoutFileName = Model.floor_cctvQr })" alt="CCTV QR" style="max-height: 200px; margin-bottom: 10px;" />
            }
            <div>
                <input type="file" name="floorCctvQrFile" accept="image/*" />
            </div>
            @Html.ValidationMessageFor(model => model.floor_cctvQr, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.floor_layout, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (!string.IsNullOrEmpty(Model.floor_layout))
            {
                <img src="@Url.Action("GetFile", "Floor", new { floorLayoutFileName = Model.floor_layout })" alt="Floor Layout" style="max-height: 200px; margin-bottom: 10px;" />
            }
            <div>
                <input type="file" name="floorLayoutFile" id="floorLayoutFile" />
            </div>
            @Html.ValidationMessageFor(model => model.floor_layout, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.floor_description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-sm-12 col-md-10">
            @Html.TextAreaFor(model => model.floor_description, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.floor_description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="fform-group row">
        @Html.LabelFor(model => model.landlord_id, "landlord_id", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("landlord_id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.landlord_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-warning" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>


}

<div>
   
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

