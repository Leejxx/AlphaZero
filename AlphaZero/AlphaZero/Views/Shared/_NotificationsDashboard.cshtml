@model IEnumerable<AlphaZero.Models.reminds>


    <div class="card-box mb-30">
        <div class="pd-20">
            <h4 class="text-blue h4">System Reminders</h4>
            <p>For anything <code>.tenant</code></p>
        </div>
        <div class="pb-20">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Tenant</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Date</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item1 in Model)
                    {
                        if (item1.landlord == null && item1.tenant != null)
                        {
                            <tr>
                                <td class="table-plus">
                                    <span>@item1.tenant.tenant_name</span>
                                </td>

                                <td>@Html.DisplayFor(modelItem => item1.reminder_title)</td>
                                <td>@Html.DisplayFor(modelItem => item1.reminder_desc)</td>
                                <td>@Html.DisplayFor(modelItem => item1.FormattedDate)</td>
                                <td>
                                    <div class="dropdown">
                                        <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                            <i class="dw dw-more"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                            <a class="dropdown-item" href="@Url.Action("Details", "Notification", new { id = item1.reminder_id })">
                                                <i class="dw dw-eye"></i> View
                                            </a>

                                            @if (item1.tenant != null)
                                            {
                                                <a class="dropdown-item" href="@Url.Action("SendWhatsAppMessage", "WhatsApp", new { id = item1.reminder_id })">
                                                    <i class="fa fa-whatsapp"></i> WhatsApp Message
                                                </a>
                                            }

                                            <a class="dropdown-item" href="@Url.Action("Edit", "Notification", new { id = item1.reminder_id })">
                                                <i class="dw dw-edit2"></i> Edit
                                            </a>

                                            <a class="dropdown-item" href="@Url.Action("Delete", "Notification", new { id = item1.reminder_id })">
                                                <i class="dw dw-delete-3"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="pd-20">
            <p>For anything <code>.landlord</code></p>
        </div>
        <div class="pb-20">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Landlord</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Date</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item2 in Model)
                    {
                        if (item2.landlord != null && item2.tenant == null)
                        {
                            <tr>
                                <td class="table-plus">
                                    <span>@item2.landlord.landlord_name</span>
                                </td>

                                <td>@Html.DisplayFor(modelItem => item2.reminder_title)</td>
                                <td>@Html.DisplayFor(modelItem => item2.reminder_desc)</td>
                                <td>@Html.DisplayFor(modelItem => item2.FormattedDate)</td>
                                <td>
                                    <div class="dropdown">
                                        <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                            <i class="dw dw-more"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                            <a class="dropdown-item" href="@Url.Action("Details", "Notification", new { id = item2.reminder_id })">
                                                <i class="dw dw-eye"></i> View
                                            </a>
                                            <a class="dropdown-item" href="@Url.Action("Edit", "Notification", new { id = item2.reminder_id })">
                                                <i class="dw dw-edit2"></i> Edit
                                            </a>

                                            <a class="dropdown-item" href="@Url.Action("Delete", "Notification", new { id = item2.reminder_id })">
                                                <i class="dw dw-delete-3"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>




