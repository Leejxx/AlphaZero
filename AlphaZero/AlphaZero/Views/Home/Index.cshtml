
@model IEnumerable<AlphaZero.Models.room>

@{

}


<style>
    .btn-orange {
        background-color: orange;
        /* Add any other desired styles */
    }
</style>

<div class="page-header">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Dashboard</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-3 mb-30">
        <div class="card-box height-100-p widget-style1">
            <div class="d-flex flex-wrap align-items-center">
                <div class="progress-data">
                    <div id=""></div>
                </div>
                <div class="widget-data">
                    <div class="h4 mb-0">@ViewBag.user</div>
                    <div class="weight-600 font-14">Users</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 mb-30">
        <div class="card-box height-100-p widget-style1">
            <div class="d-flex flex-wrap align-items-center">
                <div class="progress-data">
                    <div id=""></div>
                </div>
                <div class="widget-data">
                    <div class="h4 mb-0">@ViewBag.tenantcount</div>
                    <div class="weight-600 font-14">Tenants</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 mb-30">
        <div class="card-box height-100-p widget-style1">
            <div class="d-flex flex-wrap align-items-center">
                <div class="progress-data">
                    <div id="chart3"></div>
                </div>
                <div class="widget-data">
                    <div class="h4 mb-0">@ViewBag.availableRoom / @ViewBag.room</div>
                    <div class="weight-600 font-14">Available Rooms</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 mb-30">
        <div class="card-box height-100-p widget-style1">
            <div class="d-flex flex-wrap align-items-center">
                <div class="progress-data">
                    <div id="chart4"></div>
                </div>
                <div class="widget-data">
                    <div class="h4 mb-0">$500</div>
                    <div class="weight-600 font-14">Total Profit</div>
                </div>
            </div>
        </div>
    </div>
</div>






@Html.Action("GetRemindersDashboard", "Notification")


<div class="card-box mb-30">
    <div class="pd-20">
        <h4 class="text-blue h4">Available Rooms</h4>
        <p>For anything <code>.tenant</code></p>
    </div>
    <div class="pb-20">
        <table class="data-table table stripe hover nowrap">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Floor</th>
                    <th>Room Number</th>
                    <th>Price</th>
                    <th>Action</th>
                    <!-- Add more columns as needed for room details -->
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 1;
                }
                @foreach (var room in Model)
                {
                    <tr>
                        <td>
                            @index
                        </td>
                        @{
                            index++;
                        }

                        <td>@room.floor_id</td>
                        <td>@room.room_number</td>
                        <td>@room.room_price</td>
                        <td>
                            <a href="@Url.Action("Create", "Tenant", new { floor_id = room.floor_id, room_id = room.room_id, room_number = room.room_number })" class="btn btn-primary btn-orange">Add Tenant</a>
                        </td>
                        <!-- Display more room details here -->
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
